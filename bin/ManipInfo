#! /usr/bin/env python
# -*- coding: utf-8 -*-

import sys
from pymanip import SavedSession

def print_usage():
	print 'Usage: ManipInfo sessionName [-quiet]'
	sys.exit(0)
	
if len(sys.argv) < 2:
	print_usage()
if sys.argv[1] == '-h':
	print_usage()

quiet = False
if len(sys.argv) > 2 and sys.argv[2] == '-quiet':
	quiet=True

sessionName = sys.argv[1]
if sessionName.endswith('.hdf5'):
	N = len(sessionName)
	sessionName = sessionName[0:(N-5)]

MI = SavedSession(sessionName)
if not quiet:
	MI.describe()